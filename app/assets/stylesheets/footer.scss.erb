@import "normalize-rails";
@import "compass";
@import "susy";

$susy: (
  columns: 12,
  gutters: 1/4,
  global-box-sizing: border-box
);

@include border-box-sizing;

.application-footer {
  @include container(90%);
  color: white;
  background-color: #142E54;
  height: 11em;
  .footer-social {
    @include span(12 last);
    padding: 1em 1.5em;
    .subscribe {
      @include span(6);
      h3 {
        padding-bottom: .5em;
        font-size: 1rem;
      }
      input[type="text"] {
        @include span(6);
        height: 2em;
      }
      input[type="submit"] {
        color: #142E54;
        margin-left: -1em;
        width: 9em;
        height: 2em;
      }
    }
    .footer-fb-twtr {
      @include span(6 last);
      button {
        @include span(4);
        height: 2em;
        color: #142E54;
        margin-right: 1.5em;
        margin-top: 1.55em;
      }
    }
  }
  .footer-nav {
    // background-color: white;
    @include span(1 of 1);
    margin-left: 13em;
    margin-top: 1em;
    background-color: white;
    a {
      text-decoration: none;
      color: #142E54;
      font-size: 1.5rem;
      padding: 1em;
      font-weight: 600;
    }
    a:hover {
      color: white;
      background-color: #142E54;
    }
    .home-foot {
      @include span(2);
      background-color: #142E54;
      a {color: white;}
    }
    .blogs-foot {
      @include span(2 at 3);
    }
    .tutorials-foot {
      @include span(2 at 5);
    }
    .forum-foot {
      @include span(2 at 7);
    }
    .faq-foot {
      @include span(2 at 9);
    }
  }
}
