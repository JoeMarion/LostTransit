@import "normalize-rails";
@import "compass";
@import "susy";
/* Compass Sticky footer mixin */
@import "compass/layout/sticky-footer";
@include sticky-footer(11em);

/* Set susy defaults for application (only applies for this stylesheet */
$susy: (
  columns: 12,
  gutters: 1/4,
  global-box-sizing: border-box
);

@include border-box-sizing;

/* Remove padding and margin for application */
* {
  padding: 0;
  margin: 0;
}

/* Set default width for content to 85% (Nav and foot are 90%) */
.wrap {
  @include container(85%);
}

// misc

.alert {
  padding: 8px;
  border: 1px solid transparent;
}

.alert-danger {
  background-color: #f2dede;
  border-color: #ebccd1;
  color: #a94442;
}

.alert-success {
  background-color: #dff0d8;
  border-color: #d6e9c6;
  color: #3c763d;
}

.debug_dump {
  @include span(10);
  margin-left: 5em;
  padding: 2em;
  background-color: #eaeaea;

}
